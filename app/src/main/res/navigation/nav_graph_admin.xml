<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_admin"
    app:startDestination="@id/fragment_login">
    <fragment
        android:id="@+id/fragment_edit_customer"
        android:name="com.example.projectFinal.fragments.Fragment_edit_customer"
        android:label="fragment_edit_customer"
        tools:layout="@layout/fragment_edit_customer" />
    <fragment
        android:id="@+id/fragment_admin"
        android:name="com.example.projectFinal.fragments.Fragment_admin"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" >
        <action
            android:id="@+id/action_fragment_admin_to_organizationFragment"
            app:destination="@id/organizationFragment" />
    </fragment>
    <include app:graph="@navigation/mobile_navigation" />
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.projectFinal.fragments.Fragment_login"
        android:label="Fragment_login" >
        <action
            android:id="@+id/action_fragment_login_to_fragment_edit_customer"
            app:destination="@id/fragment_edit_customer" />
        <action
            android:id="@+id/action_fragment_login_to_fragment_admin"
            app:destination="@id/fragment_admin" />
    </fragment>
    <fragment
        android:id="@+id/organizationFragment"
        android:name="com.example.projectFinal.activities.ui.organization.OrganizationFragment"
        android:label="fragment_organization"
        tools:layout="@layout/fragment_organization" >
        <action
            android:id="@+id/action_organizationFragment_to_administrationFragment"
            app:destination="@id/administrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/administrationFragment"
        android:name="com.example.projectFinal.activities.ui.administration.AdministrationFragment"
        android:label="fragment_administration"
        tools:layout="@layout/fragment_administration" >
        <action
            android:id="@+id/action_administrationFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.projectFinal.activities.ui.notification.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
</navigation>